{
  "name": "ec-europa/search_api_europa_search",
  "type": "drupal-module",
  "description": "Provides an Europa Search backend for the Search API module.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "EUPL-1.1",
  "require": {
    "ec-europa/oe-europa-search-client": "dev-master"
  },
  "require-dev": {
    "ec-europa/oe-code-review": "^0.0.2",
    "phpunit/phpunit": "^5",
    "composer/installers": "^1.2",
    "drupal/drupal": "~7.0",
    "drush/drush": "~8.0",
    "webflo/drupal-finder": "^1.0.0",
    "webmozart/path-util": "^2.3",
    "cweagans/composer-patches": "^1.6",
    "drupal-composer/preserve-paths": "^0.1",
    "drupal/composer_autoloader": "^1.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/7"
    }
  ],
  "extra": {
    "installer-paths": {
      "web/": ["type:drupal-core"],
      "web/profiles/{$name}/": ["type:drupal-profile"],
      "web/sites/all/drush/{$name}/": ["type:drupal-drush"],
      "web/sites/all/modules/contrib/{$name}/": ["type:drupal-module"]
    },
    "preserve-paths": [
       "web/sites/all/modules/custom",
       "web/sites/default"
    ]
  }
}
